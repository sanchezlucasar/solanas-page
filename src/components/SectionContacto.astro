---
const WHATSAPP =
    "https://wa.me/542975408275?text=" +
    encodeURIComponent("Hola, necesito un turno. ¿Me brindan info?");
const TELEFONO = "+542975408275";
const DIRECCION = "Av. Canadá 2185, Comodoro Rivadavia, Chubut";
const EMAIL = "info@solanas.com"; // cambialo si hace falta

// Links a redes (reemplazá con los reales)
const FACEBOOK =
    "https://www.facebook.com/p/Solanas-Centro-de-Salud-100066727225246/";
const INSTAGRAM = "https://www.instagram.com/solanas_centro_de_salud/";
---

<section id="contacto" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-8 items-start">
        <!-- Columna izquierda: Información -->
        <div class="space-y-5">
            <h2 class="text-3xl md:text-4xl font-bold text-brand-700">
                Contacto
            </h2>
            <p class="text-slate-600">
                Estamos para ayudarte con turnos y consultas. Podés escribirnos
                por WhatsApp, llamarnos o visitarnos.
            </p>

            <div class="rounded-2xl border border-slate-200 p-5 space-y-4">
                <div class="flex items-start gap-3">
                    <!-- icon ubicación -->
                    <svg
                        class="h-6 w-6 text-brand-700 mt-1"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            fill="currentColor"
                            d="M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7Zm0 9.5a2.5 2.5 0 1 1 0-5a2.5 2.5 0 0 1 0 5Z"
                        ></path>
                    </svg>
                    <div>
                        <p class="font-semibold">Dirección</p>
                        <p class="text-slate-700">{DIRECCION}</p>
                    </div>
                </div>

                <div class="flex items-start gap-3">
                    <!-- icon teléfono -->
                    <svg
                        class="h-6 w-6 text-brand-700 mt-1"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            fill="currentColor"
                            d="M6.6 10.8a15.3 15.3 0 0 0 6.6 6.6l2.2-2.2a1 1 0 0 1 1-.25a11.4 11.4 0 0 0 3.6.6a1 1 0 0 1 1 1V20a1 1 0 0 1-1 1A17 17 0 0 1 3 8a1 1 0 0 1 1-1h3.5a1 1 0 0 1 1 1a11.4 11.4 0 0 0 .6 3.6a1 1 0 0 1-.25 1Z"
                        ></path>
                    </svg>
                    <div>
                        <p class="font-semibold">Teléfono</p>
                        <p class="text-slate-700">
                            <a
                                href={`tel:${TELEFONO}`}
                                class="underline hover:text-emerald-600"
                                >{TELEFONO}</a
                            >
                        </p>
                    </div>
                </div>

                <div class="flex items-start gap-3">
                    <!-- icon mail -->
                    <svg
                        class="h-6 w-6 text-brand-700 mt-1"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            fill="currentColor"
                            d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2Zm0 4l-8 5L4 8V6l8 5l8-5v2Z"
                        ></path>
                    </svg>
                    <div>
                        <p class="font-semibold">Email</p>
                        <p class="text-slate-700">
                            <a
                                href={`mailto:${EMAIL}`}
                                class="underline hover:text-emerald-600"
                                >{EMAIL}</a
                            >
                        </p>
                    </div>
                </div>

                <div class="flex items-start gap-3">
                    <!-- icon redes -->
                    <svg
                        class="h-6 w-6 text-brand-700 mt-1"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            fill="currentColor"
                            d="M7 3h10a4 4 0 0 1 4 4v10a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V7a4 4 0 0 1 4-4Z"
                        ></path>
                    </svg>
                    <div>
                        <p class="font-semibold">Redes</p>
                        <p class="flex flex-wrap gap-3">
                            <a
                                href={FACEBOOK}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-brand-700 underline hover:text-emerald-600"
                                >Facebook</a
                            >
                            <a
                                href={INSTAGRAM}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-brand-700 underline hover:text-emerald-600"
                                >Instagram</a
                            >
                        </p>
                    </div>
                </div>
            </div>

            <div class="flex gap-3">
                <a
                    href={WHATSAPP}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn-brand"
                >
                    Escribir por WhatsApp
                </a>
                <a
                    href={`${import.meta.env.BASE_URL}#servicios`}
                    class="btn-ghost"
                >
                    Ver servicios
                </a>
            </div>
        </div>

        <!-- Columna derecha: Mapa -->
        <div
            class="rounded-2xl overflow-hidden border border-slate-200 h-[420px]"
        >
            <iframe
                title="Mapa Solanas Centro de Salud"
                width="100%"
                height="100%"
                style="border:0;"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                src={"https://www.google.com/maps?q=" +
                    encodeURIComponent(DIRECCION) +
                    "&output=embed"}></iframe>
        </div>
    </div>
</section>
