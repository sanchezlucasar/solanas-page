---
const WHATSAPP = "https://wa.me/542975408275";
---

<section id="inicio" class="bg-gradient-to-b from-brand-50 to-white">
    <div
        class="max-w-6xl mx-auto px-4 py-16 grid md:grid-cols-2 gap-10 items-center"
    >
        <div class="reveal">
            <img
                src={`${import.meta.env.BASE_URL}images/logo.webp`}
                alt="Solanas Centro de Salud"
                class="h-12 w-auto mb-4"
            />
            <h1 class="text-4xl md:text-5xl font-bold leading-tight">
                Centro de Salud <span class="text-brand-700">Solanas</span>
            </h1>
            <p class="mt-4 text-lg text-slate-600">
                Rehabilitación integral, kinesiología, fonoaudiología, clínica
                médica, neurología y más.
            </p>
            <div class="mt-6 flex gap-3">
                <a href={WHATSAPP} class="btn-brand whatsapp"
                    >Sacar turno por WhatsApp</a
                >
                <a href="#servicios" class="btn-ghost">Ver servicios</a>
            </div>
            <p class="mt-4 text-sm text-slate-500">
                Av. Canadá 2185 · Comodoro Rivadavia
            </p>
        </div>

        <div
            class="reveal aspect-video rounded-xl border border-slate-200 overflow-hidden"
        >
            <img
                src={`${import.meta.env.BASE_URL}images/hero.webp`}
                alt="Instalaciones Solanas"
                class="w-full h-full object-cover"
                loading="lazy"
            />
        </div>
    </div>
</section>
