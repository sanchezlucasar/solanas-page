---
const images = [
    "/images/galeria/solanas-1.jpg",
    "/images/galeria/solanas-2.jpg",
    "/images/galeria/solanas-3.jpg",
];
---

<section class="bg-white">
    <div class="max-w-6xl mx-auto px-4 py-10">
        <div class="overflow-hidden rounded-xl border border-slate-200">
            <div class="track" id="track">
                {
                    images.map((src) => (
                        <img
                            src={src}
                            alt="Solanas"
                            class="w-full shrink-0 object-cover aspect-[16/9]"
                            loading="lazy"
                        />
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    .track {
        display: flex;
        transition: transform 0.6s ease;
    }
</style>
<script is:raw>
    (function () {
        const t = document.getElementById("track");
        if (!t) return;
        let i = 0;
        const n = t.children.length;
        setInterval(() => {
            i = (i + 1) % n;
            t.style.transform = `translateX(-${i * 100}%)`;
        }, 3500);
    })();
</script>
