---
import "@/styles/global.css";
const {
  title = "Solanas - Centro de Salud",
  description = "Rehabilitación integral, kinesiología, fonoaudiología, clínica médica y más. Av. Canadá 2185, Comodoro Rivadavia.",
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="text-slate-800 bg-white">
    <slot />
    <!-- Reveal-on-scroll global -->
    <script is:raw>
      (function () {
        const io = new IntersectionObserver(
          (es) => {
            es.forEach((e) => {
              if (e.isIntersecting) e.target.classList.add("in");
            });
          },
          { threshold: 0.12 },
        );
        document.addEventListener("DOMContentLoaded", () => {
          document.querySelectorAll(".reveal").forEach((el) => io.observe(el));
        });
      })();
    </script>
  </body>
</html>
